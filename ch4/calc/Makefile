# RPN calculator Makefile

CC=gcc
CFLAGS=-I. -Wall -Wextra -Wpedantic
CPPFLAGS=-I.
DEPS=calc.h
RM=rm

# These are the objects generated by the build process
objects = getch.o getop.o stack.o main.o

all: rpn

# Compile and link the RPN app
rpn: getch.o getop.o stack.o main.o
	$(CC) -o rpn getch.o getop.o stack.o main.o -lm

# Run clean when asked, no matter what
.PHONY:	clean
clean:
	-$(RM) $(objects) rpn

# Remove ojbect files only
.PHONY: clobber
clobber:
	-$(RM) $(objects)	

